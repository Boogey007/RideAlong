<?xml version="1.0" encoding="utf-8"?>
<!--
    STRUCTURE:
    SnackOverflow
    final_main_image
    main_about
    main_about2
    google_connect2 -> normal login refactor
    google_connect
    sign_up
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cooldevs.ridealong.FinalMainActivity"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_main_image"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:text="SnackOverflow"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/final_main_image"
        android:src="@drawable/final_main_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />

   <TextView
       android:layout_centerInParent="true"
       android:textColor="@android:color/black"
       android:textSize="25sp"
       android:fontFamily="sans-serif-light"
       android:layout_marginTop="10dp"
       android:id="@+id/main_about"
       android:layout_below="@+id/final_main_image"
       android:text="Ride Along"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/main_about2"
        android:layout_below="@+id/main_about"
        android:text="Connect and locate!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/google_connect2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="72dp"
        android:text="Login with Email" />

    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/google_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="27dp"
        android:text="Connect with Google"
        app:isDarkTheme="true" />

    <TextView
        android:id="@+id/sign_up"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:text="Sign Up!"
        android:textAlignment="center" />

</RelativeLayout>